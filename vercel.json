{
  "version": 2,
  "functions": {
    "api/index.php": {
      "runtime": "@vercel/php@8.2.0"
    }
  },
  "routes": [
    {
      "src": "/(css|js|images|img|fonts|assets)/(.*)",
      "dest": "/public/$1/$2"
    },
    {
      "src": "/build/(.*)",
      "dest": "/public/build/$1"
    },
    {
      "src": "/storage/(.*)",
      "dest": "/public/storage/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_KEY": "base64:Hb1HJW1KSA5L2jP6OR+YZ0R7twt6jZFvH10QGQ8JeYE=",
    "DB_CONNECTION": "sqlite",
    "DB_DATABASE": "/tmp/database.sqlite"
  }
}